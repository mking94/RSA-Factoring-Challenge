#!/bin/bash
vr=$(echo "$@" | awk '{print NF}')
if [ "$vr" -eq "0" ]
then
echo "Please add file path as argument"
exit 1
fi
if [ "$vr" -eq "1" ]
then
if [ -f $1 ]
then
size=$(awk 'END{print NR}' $1)
file=$(echo "$(<$1)")
array=($(echo "$file" | tr ' ' '\n'))
i=0
while [ $i -le $size ]
do
temp=$(echo "${array[$i]}")
j=2
while [ $j -le (($temp/2)) ]
do
if [ (($temp%$j)) -eq 0 ]
then
echo "${array[$i]}""="((temp/j))"$j"
fi
((j=$j+1))
done
((i=$i+1))
done
exit 0
else
echo "Please insert corret file path"
fi
fi
if [ "$vr" -gt "1" ]
then
echo "Please insert only one argument"
exit 1
fi
